<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <style>
        .carousel-inner img {
            width: 100%;
            height: 80%;
        }
    </style>
</head>
<body>

    <div class="container-fluid bg-danger" style="padding:0">
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <nav class="navbar navbar-expand-sm bg-danger navbar-dark" style="font-size: 20px;padding-bottom: 0px; padding-top: 15px">
                    <ul class="navbar-nav">
                        <li class="nav-item" style="padding:15px 15px 0 15px;margin:0 2px">
                            <a class="nav-link" href="@Url.Action("Index","Home")">Trang Chủ</a>
                        </li>
                        <li class="nav-item" style="padding: 15px 15px 0 15px; margin: 0 2px ">
                            <a class="nav-link" href="@Url.Action("SanPhamPartial","SanPham")">Sản Phẩm</a>
                        </li>
                        <li class="nav-item" style="padding:0 15px">
                            <img src="~/Images/nuoc-mam-hoang-gia-logo.png" width="100px" height="90px" />
                        </li>
                        <li class="nav-item" style="padding: 15px 15px 0 15px; margin: 0 2px ">
                            <a class="nav-link" href="#">Về Chúng Tôi</a>
                        </li>
                        <li class="nav-item" style="padding: 15px 15px 0 15px; margin: 0 2px ">
                            <a class="nav-link" href="#">Liên Hệ</a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="col-1" style="line-height:100px;">
                @Html.Action("GioHangPartial","GioHang")
            </div>
            <div class="col-md-2" style="line-height:110px;text-align:right;padding-right:40px">
                @*<a href="@Url.Action("laydsSP","QLSP","Admin")">*@
                <a style="color:#e2dfdf;text-decoration:none;font-size:medium" href="@Url.Action("Login","TaiKhoan")">
                    <img src="~/Images/person.png" width="30px" />
                    @*<a style="color:#e2dfdf;text-decoration:none;font-size:medium" href="@Url.Action("laydsSP","QLSP","Admin")">*@
                Đăng Nhập</a>
</div>
        </div>
    </div>

    <div id="demo" class="carousel slide" data-ride="carousel">

        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
            <li data-target="#demo" data-slide-to="3"></li>
        </ul>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/banner_1.jpg" width="1100" height="400">
            </div>
            <div class="carousel-item">
                <img src="~/Images/banner_2.jpg" width="1100" height="400">
            </div>
            <div class="carousel-item">
                <img src="~/Images/banner_3.jpg" width="1100" height="400">
            </div>
            <div class="carousel-item">
                <img src="~/Images/banner_4.jpg" width="1100" height="400">
            </div>
        </div>

        <a class="carousel-control-prev" href="#demo" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>
    <br /><br /><br />

    
        <div class="row">
            <div class="col col-md-3">
                  @Html.Action("LoaiSanPhamPartial", "LoaiSanPham")
            </div>
            <div class="col col-md-9">
                @RenderBody()
            </div>
        </div>
   
        

    <div class="container-fluid">
       <div class="row">
           <div>

           </div>
       </div>
       <div class="row" style="background-color:lightyellow">
           <div class="col-3"></div>
           <div class="col-6"><h5 class="text-left">Coppyright © 2022 Fish Sauce. All Rights Reserved</h5></div>
           <div class="col-3"></div>
       </div>
    </div>
</body>
</html>
